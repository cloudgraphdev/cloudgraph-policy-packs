{
  "name": "policy-packs",
  "version": "0.0.0",
  "description": "CloudGraph CSPM policy packs monorepo",
  "private": true,
  "repository": {
    "url": "github.com:cloudgraphdev/cloudgraph-policy-packs"
  },
  "workspaces": [
    "src/**/*"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^10.0.2",
    "semantic-release": "^21.0.0"
  },
  "resolutions": {
    "chalk": "^4.1.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "release": "NODE_AUTH_TOKEN=$NPM_TOKEN NPM_CONFIG_IGNORE_SCRIPTS='true' NODE_JQ_SKIP_INSTALL_BINARY='true' npm run release --workspaces --ignore-scripts",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces"
  },
  "dependencies": {
    "@cloudgraph/sdk": "0.21.1",
    "lodash": "^4.17.21"
  }
}
